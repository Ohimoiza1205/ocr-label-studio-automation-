<View>
  <Image name="image" value="$image" zoom="true" />
  <RectangleLabels name="label" toName="image">
    <Label value="Employee Code" background="red" />
    <Label value="Employee Name" background="blue" />
    <Label value="Designation" background="cyan" />
    <Label value="Department" background="lightblue" />
    <Label value="Invoice Number" background="blue" />
    <Label value="Invoice Date" background="green" />
    <Label value="Customer Name" background="yellow" />
    <Label value="Address" background="gray" />
    <Label value="Line Items" background="orange" />
    <Label value="Tax" background="pink" />
    <Label value="Total Amount" background="purple" />
    <Label value="Basic Salary" background="teal" />
    <Label value="Incentive Pay" background="lime" />
    <Label value="Allowances" background="brown" />
    <Label value="Deductions" background="magenta" />
    <Label value="Net Pay" background="gold" />
  </RectangleLabels>
  <TextArea name="transcription" toName="image" editable="true" perRegion="true"
            rows="3" placeholder="Enter recognized text here" />
</View>
